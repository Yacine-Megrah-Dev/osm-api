{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "monorepo": true,
    "compilerOptions": {
        "deleteOutDir": true,
        "builder": "webpack"
    },
    "projects": {
        "auth-app": {
            "type": "application",
            "root": "apps/auth-app",
            "entryFile": "main",
            "sourceRoot": "apps/auth-app/src",
            "compilerOptions": {
                "tsConfigPath": "apps/auth-app/tsconfig.app.json",
                "webpack": true
            },
            "generatePackageJson": true
        },
        "osm-api-gateway": {
            "type": "application",
            "root": "apps/osm-api-gateway",
            "entryFile": "main",
            "sourceRoot": "apps/osm-api-gateway/src",
            "compilerOptions": {
                "tsConfigPath": "apps/osm-api-gateway/tsconfig.app.json",
                "webpack": true
            },
            "generatePackageJson": true
        },
        "users-app": {
            "type": "application",
            "root": "apps/users-app",
            "entryFile": "main",
            "sourceRoot": "apps/users-app/src",
            "compilerOptions": {
                "tsConfigPath": "apps/users-app/tsconfig.app.json",
                "webpack": true
            },
            "generatePackageJson": true
        }
    }
}
